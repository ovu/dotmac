rctrl - i : skhd -k "shift - 0x1D"

# # Curly braces
rctrl + shift - u : skhd -k "shift - 0x21"
rctrl + shift - i : skhd -k "shift - 0x1E"

# # equal
rctrl - m : skhd -k "0x18"

